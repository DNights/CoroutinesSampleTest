<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/progessBar_Thread"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
        <Button
                android:text="start Thread"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_Thread"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/progessBar_Runnable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
                android:text="start Runnable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_Runnable"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/progessBar_AsyncTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
                android:text="start AsyncTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_AsyncTask"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/progessBar_Rx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
                android:text="start RxKotlin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_RxKotlin"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ProgressBar
                android:id="@+id/progessBar_Coroutine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
                android:text="start Coroutine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button_Coroutine"
                android:layout_weight="1"/>
    </LinearLayout>

    <Button
            android:id="@+id/button_All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START ALL" />

</LinearLayout>